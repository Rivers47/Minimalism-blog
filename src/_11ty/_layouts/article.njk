type: article
---
<!DOCTYPE html>
<html lang="en">
{% include "head-article.njk" %}
<!-- Start Body -->
<body>
    {% include "nav.njk" %}
    <article>
        <small class="info">
                {{ location }}&nbsp;
                <time datetime="{{page.date}}">{{page.date | readableDate}}</time>&nbsp;&ndash;&nbsp;
                {{content | readingTime}}
        </small>
        {% if lang == 'zh' %}
            <h1 style="font-family: Noto Sans SC;">{{ title }}</h1>
            <div style="font-family: Noto Sans SC;">
                {{content | safe}}
            </div>
        {% elif lang == 'jp' %}
            <h1 style="font-family: Zen Kaku Gothic New;">{{ title }}</h1>
            <div style="font-family: Zen Kaku Gothic New;">
                {{content | safe}}
            </div>
        {% else %}
            <h1>{{ title }}</h1>
            {{content | safe}}
        {% endif %}
        
    </article>
    {% include "footer.njk" %}
</body>
<!-- End Body -->
</html>
